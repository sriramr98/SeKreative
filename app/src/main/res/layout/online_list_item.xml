<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_circle_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/chris"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chris"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            app:layout_constraintStart_toEndOf="@+id/iv_circle_user" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/iv_circle_user"
            app:layout_constraintBottom_toBottomOf="@+id/iv_circle_user"/>

</androidx.constraintlayout.widget.ConstraintLayout>